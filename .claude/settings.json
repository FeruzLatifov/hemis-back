{
  "permissions": {
    "allow": [
      // Allow running Gradle commands for build, run and test
      "Bash(./gradlew:*)",
      "Bash(gradle:*)",
      // Allow documentation searches
      "WebSearch",
      "WebFetch(domain:mvnrepository.com)",
      "WebFetch(domain:docs.spring.io)",
      "WebFetch(domain:docs.sentry.io)"
    ],
        "ask": [
      // Protect secrets and environment files from being read【684543793350297†L329-L345】
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./config/credentials.json)",
      "Read(./build)",
      // Disallow destructive shell commands by default
      "Bash(rm:*)",
      "Bash(sudo:*)"
    ],
